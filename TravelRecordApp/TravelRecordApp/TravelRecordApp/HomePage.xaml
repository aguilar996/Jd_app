<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.HomePage"
            xmlns:local="clr-namespace:TravelRecordApp">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Add" x:Name="Add" Command="{Binding NavCommand}"></ToolbarItem>
    </TabbedPage.ToolbarItems>
    <local:HistoryPage Title="History"
                       Icon="home.png"></local:HistoryPage>
    <local:MapPage Title="Map"
                   Icon="map.png"></local:MapPage>
    <local:ProfilePage Title="Profile"
                       Icon="profile.png"></local:ProfilePage>
    
    
</TabbedPage>