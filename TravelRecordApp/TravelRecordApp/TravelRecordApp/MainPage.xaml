<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecordApp"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout VerticalOptions="Center" 
                 Margin="20,0">
        <Image x:Name="iconImage"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               Margin="0,0,0,50"
               HeightRequest="50"/>
        <Entry x:Name="User" 
               Placeholder="Email"
               Keyboard="Email"
                TextColor="{StaticResource Texto}"
               Text="{Binding Email}"></Entry>
        <Entry x:Name="Pass" 
               Placeholder="Password"
               IsPassword="True"
                TextColor="{StaticResource Texto}"
               Text="{Binding Password}"></Entry>
        <Button x:Name="Login" 
                Text="Log In" 
                Clicked="Login_Clicked" 
                Margin="0,50"
                ></Button>

        <Button x:Name="registerUserButton" 
                Text="Register" 
                    HorizontalOptions="End"
               Clicked="RegisterUserButton_Clicked"
                Margin="0,50"
                ></Button>


    </StackLayout>

</ContentPage>
